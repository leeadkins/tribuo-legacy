<% content_for :sidebar do %>
	<p>
		Here, you can edit your profile. You may change your email address, password, or name. To change your password, you will need to re-enter your old password.
	</p>
<% end %>

<% form_for @user, :url => {:action => "update"} do |f| -%>
<p><%= label_tag 'login' %><br/>
<%= f.text_field :login %></p>

<p><%= label_tag 'email' %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag 'name' %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag 'password' %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', 'Confirm Password' %><br/>
<%= f.password_field :password_confirmation %></p>

	<%= f.submit "Update", :disable_with => 'Updating...' %>
<% end -%>